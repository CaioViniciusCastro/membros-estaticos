<button onclick="Verificacao_idade()">Confirme suas informações aqui.</button>

<p id="mensagem"></p>

<script>
function Verificacao_idade(){

let data_nasc = Number(document.getElementById("Data_nasc").value);
let nome_user = document.getElementById("Nome_user").value;

  if(data_nasc < 2006){
    let resultado = ("Boas vindas senhor(a) "+(nome_user)+". \n Insira um nome de usuário e uma senha");
    document.getElementById("mensagem").innerHTML = resultado;
  }else if(data_nasc > 2005){
    let resultado = ("Devido a não-maioridade, seu login não foi permitido.");
    document.getElementById("mensagem").innerHTML = resultado;
    return;
  }
}
</script>

<div>
<p>Nos informe seu nome de usuário:</p>
<input type="text" id="Nome_usuario">
