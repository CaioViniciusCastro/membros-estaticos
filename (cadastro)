<input type="text" id="Senha_usuario">

<button onclick="Dados_usuario()">Confirme suas informações aqui.</button>

<script>
function Dados_usuario(){

let nome_usuario = document.getElementById("Nome_usuario").value;
let senha_usuario = document.getElementById("Senha_usuario").value;

const dados = {nomeUsuario:nome_usuario, senhaUsuario:senha_usuario};
}
</script>

