<script>    
//criar lista
const nomes = ['maio', 'ralo', 'bala', 'mala'];

//criar função para randomizar palavra da lista

document.getElementById("buttonrandomword").addEventListener("click", function Randomword(){
    
    let palavraEscolhida = nomes[Math.floor(Math.random()* nomes.length)]
    document.getElementById("randomword").innerHTML = palavraEscolhida
})
</script>

